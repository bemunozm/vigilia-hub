{
  "name": "vigilia-hub",
  "version": "1.0.0",
  "description": "VigilIA Hub - Raspberry Pi Hardware Controller for Digital Concierge",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:relays": "ts-node tests/test-relays.ts",
    "test:keypad": "ts-node tests/test-keypad.ts",
    "test:hardware": "sudo node scripts/test-hardware.js"
  },
  "keywords": [
    "raspberry-pi",
    "citofono",
    "conserje-digital",
    "ai",
    "iot"
  ],
  "author": "VigilIA Team",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "openai": "^6.22.0",
    "pigpio": "^3.3.1",
    "rxjs": "^7.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "onoff": "^6.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
