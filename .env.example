# Backend Configuration
BACKEND_URL=http://192.168.1.100:3000
BACKEND_API_URL=http://192.168.1.100:3000
HUB_SECRET=cambiar_por_algo_muy_seguro_12345

# Hub Identification
HUB_ID=hub-001
HUB_LOCATION=Edificio A - Panel Principal

# GPIO Pins (BCM numbering)
RELAY_PIN_1=17
RELAY_PIN_2=27

# Audio Configuration
# Dispositivos de audio (usar aplay -L y arecord -L para ver disponibles)
# Para Raspberry Pi 3:
#   - Jack 3.5mm: plughw:CARD=Headphones,DEV=0
#   - HDMI: plughw:CARD=vc4hdmi,DEV=0
#   - USB Audio: plughw:CARD=Device,DEV=0
AUDIO_DEVICE=plughw:CARD=Headphones,DEV=0
CAPTURE_DEVICE=plughw:CARD=Device,DEV=0
SAMPLE_RATE=24000
TARGET_SAMPLE_RATE=24000

# Echo Suppression
ECHO_TAIL_MS=300
VOLUME_THRESHOLD=0.3

# Connectivity
CONNECTIVITY_CHECK_INTERVAL_MS=30000
CACHE_SYNC_INTERVAL_MS=300000

# Relay Safety
RELAY_SETTLING_TIME_MS=200
MAX_INTERCEPT_TIME_MS=180000

# Logging
LOG_LEVEL=info
NODE_ENV=development
